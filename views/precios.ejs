      <div class="form-group col-md-9">
        <input type="email" class="form-control" placeholder="Correo" name="correo">
      </div>
    </div>

    <h2 class="sobre-ti py-5">Sobre Tu Mascota...</h2>

    <div class="row">
      <div class="form-group col-md-4">
        <input type="text" class="form-control" placeholder="Nombre" name="nombreMascota">
